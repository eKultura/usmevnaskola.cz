[
  {
    "text": "„Má korunu, ale není král.“",
    "napoveda": "Stojí na kopci a má výhled.",
    "reseni": "Hrad",
    "audio": ""
  },
  {
    "text": "„Stojí u vody, má zelené vlasy a hrníček.“",
    "napoveda": "Bývá u rybníka.",
    "reseni": "Vodník",
    "audio": ""
  },
  {
    "text": "„Je to žena, svítí bílým světlem a straší v noci.“",
    "napoveda": "Má ráda staré hrady.",
    "reseni": "Bílá paní",
    "audio": ""
  },
  {
    "text": "„Má meč, brnění a chrání království.“",
    "napoveda": "Je to válečník z pověstí.",
    "reseni": "Rytíř",
    "audio": ""
  },
  {
    "text": "„Není to kámen, ale stojí pevně a střeží poklad.“",
    "napoveda": "Většinou má věže.",
    "reseni": "Pevnost",
    "audio": ""
  },
  {
    "text": "„Pálí, ale není oheň, bolí, ale není rána.“",
    "napoveda": "Dávný soudce ji používal k trestu.",
    "reseni": "Pravda",
    "audio": ""
  },
  {
    "text": "„Nevidíš ho, ale ukáže ti cestu.“",
    "napoveda": "Na cestě svítí.",
    "reseni": "Světélko bludičky",
    "audio": ""
  },
  {
    "text": "„Roste v lese, ale září jako zlato.“",
    "napoveda": "O Vánocích je kouzelné.",
    "reseni": "Zlaté kapradí",
    "audio": ""
  },
  {
    "text": "„Všude jej slyšíš, ale nikde ho nevidíš.“",
    "napoveda": "Bývá na horách.",
    "reseni": "Krakonoš",
    "audio": ""
  },
  {
    "text": "„Má rohy a kopyta, ale není to koza.“",
    "napoveda": "Nosí pytel.",
    "reseni": "Čert",
    "audio": ""
  },
  {
    "text": "„Je to město, ale začalo jako proroctví.“",
    "napoveda": "Byla o něm věštba.",
    "reseni": "Praha",
    "audio": ""
  },
  {
    "text": "„Mlýn to byl, ale voda v něm netekla.“",
    "napoveda": "Bydlel tam čert.",
    "reseni": "Čertův mlýn",
    "audio": ""
  }
]
